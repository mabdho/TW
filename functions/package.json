{
  "name": "functions",
  "version": "1.0.0",
  "description": "Firebase Functions for TravelWanders",
  "main": "index.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "npm run build:server && npm run build:functions",
    "build:server": "esbuild ../server/index.ts --platform=node --packages=external --bundle --format=esm --outfile=index.js --external:firebase-admin --external:firebase-functions",
    "build:functions": "node create-functions-wrapper.js",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.8.1"
  },
  "devDependencies": {
    "esbuild": "^0.20.1"
  },
  "private": true
}